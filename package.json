{
  "name": "vue-3-typescript-ssr",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start": "yarn run bundle:production && yarn run serve:production",
    "clean": "rimraf ./dist",
    "bundle": "yarn run clean && yarn run bundle:client && yarn run bundle:server",
    "bundle:client": "vue-cli-service build",
    "bundle:server": "cross-env SSR=true vue-cli-service build --dest dist/server",
    "bundle:app": "tsc --project tsconfig.app.json",
    "bundle:production": "yarn run bundle:app && yarn run bundle:client && yarn run bundle:server",
    "serve": "vue-cli-service serve",
    "serve:ssr": "cross-env NODE_ENV=development nodemon --ignore dist/ -e ejs,js,ts,css,html,jpg,png,scss app.ts",
    "serve:production": "cross-env NODE_ENV=production nodemon --ignore dist/ -e ejs,js,ts,css,html,jpg,png,scss app.ts",
    "serve:refresh": "yarn run bundle && yarn run serve:ssr",
    "fix": "yarn fix:eslint && yarn fix:prettier && yarn fix:stylelint",
    "fix:eslint": "eslint **/*.{js,ts,vue} --fix",
    "fix:prettier": "prettier --write **/*.{vue,js,ts,css,sass,scss}",
    "fix:stylelint": "stylelint --fix **/*.{vue,css,sass,scss} --ignore-path",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:stylelint",
    "lint:eslint": "eslint **/*.{js,ts,vue}",
    "lint:prettier": "prettier --check **/*.{vue,js,ts,css,sass,scss}",
    "lint:stylelint": "stylelint **/*.{vue,css,sass,scss} --ignore-path"
  },
  "dependencies": {
    "@vue/server-renderer": "^3.2.8",
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "core-js": "^3.6.5",
    "express": "^4.17.1",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0",
    "vue-i18n": "^9.1.7"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "@intlify/vue-i18n-loader": "^2.1.2",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-typescript": "^7.0.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "node-sass": "^4.12.0",
    "prettier": "^2.3.1",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "connect-livereload": "^0.6.1",
    "cross-env": "^7.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.0",
    "file-loader": "^6.2.0",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "~4.1.5",
    "url-loader": "^4.1.1",
    "vue-loader": "^15.9.7",
    "webpack-manifest-plugin": "^3.1.1",
    "webpack-node-externals": "^3.0.0"
  },
  "gitHooks": {
    "commit-msg": "commitlint -e -V",
    "pre-commit": "lint-staged",
    "pre-push": "lint-staged"
  },
  "lint-staged": {
    "*.{vue,js,ts}": "eslint --fix",
    "*.{vue,js,ts,css,sass,scss}": "prettier --write",
    "*.{vue,css,sass,scss}": "stylelint --fix"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  }
}
